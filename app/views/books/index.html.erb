

<h1>Books</h1>
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<div class="books-table">
<table rules="none" >
 <thead>
   <tr>
	 <th>Title</th>
	 <th>Body</th>
   </tr>
 </thead>
  <tbody>
    <% @books.each do |book|%>
	<tr>
		<td width="25%"><%= book.title%></td>
		<td><%= book.body%></td>
		<td width="9%"><%= link_to "Show","/books/#{book.id}" %></td>
		<td width="9%"><%= link_to "Edit","/books/#{book.id}/edit" %></td>
		<td width="9%"><%= link_to "Destroy","/books/#{book.id}",data: {confirm: '削除しますか？'},method: :delete %></td>
	</tr>
	<% end %>	
  </tbody>
</table>
</div>
<h2>New book</h2>
<%= form_for(@book, url: '/books') do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <p><%= f.text_area :body %></p>
  <%= f.submit 'Create Book' %>
<% end %>


